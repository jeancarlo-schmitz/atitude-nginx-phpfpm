# Parar e remover containers
docker-compose down

# Limpar containers
docker container prune -f

# Remover imagens relacionadas (nginx e php)
docker image rm $(docker images | grep docker-ngix-phpfpm_nginx | awk '{print $3}')
docker image rm $(docker images | grep docker-ngix-phpfpm_php | awk '{print $3}')

# Rebuild for√ßado de nginx e php
docker-compose build --no-cache nginx php

# Subir novamente
docker-compose up -d

# Mostrar status
docker ps